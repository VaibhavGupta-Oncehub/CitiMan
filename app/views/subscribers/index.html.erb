<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>CitiMan</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Jost:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- CSS only -->
  <link rel="stylesheet"  href="https://unpkg.com/aos@next/dist/aos.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet"  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
  <link rel="stylesheet"  href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
  <link  rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css">

  <!-- Template Main CSS File -->
  <%= stylesheet_link_tag "custom", media: 'all', 'data-turbolinks-track': 'reload' %>


</head>

<body>

  <section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
      <h2 class="text-center"> Welcome to our Newsletter Subscribes Page<span> ðŸ“§ </span></h2>
    </div>
  </section><!-- End Breadcrumbs -->

  <section class="inner-page">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                  <p class="text-center h2 fw-bold mb-5 mx-1 mx-md-4 mt-4">Subscribers</p>
                  <table class="w-100">
                    <thead>
                      <tr>
                        <th>Email</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @subscribers.each do |subscriber| %>
                        <tr>
                          <td><%= subscriber.email %></td>
                          <td><%= link_to 'Show', subscriber,class: "btn btn-primary btn-lg m-2", style:"background-color: #3b5998"  %></td>
                          <td><%= link_to 'Edit', edit_subscriber_path(subscriber),class: "btn btn-primary btn-lg m-2" , style:"background-color: #3b5998" %></td>
                          <td><%= link_to 'Destroy', subscriber, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-primary btn-lg m-2", style:"background-color: #3b5998"  %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>

                  <div class="divider d-flex align-items-center my-4">
                    <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                  </div>
                   <div class="container text-center">
                   <%= link_to 'New Subscriber', new_subscriber_path,class: "btn btn-primary btn-lg m-2" , style:"background-color: #3b5998"  %>
                   </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  
  <%# <div id="preloader"></div> %>
  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/boxicons@2.0.9/dist/boxicons.js"></script>
  
  <%= javascript_include_tag 'noframework.waypoints.min.js', 'data-turbolinks-track': 'reload' %>
  
  <!-- Template Pages JS File -->
  <%= javascript_include_tag 'custom', 'data-turbolinks-track': 'reload' %>

</body>

</html>                